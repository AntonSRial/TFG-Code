<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Cubemos.Samples.InfoDialog"
    WindowStartupLocation="CenterScreen" 
    SizeToContent="WidthAndHeight"
    Width="300"
    MinHeight="160"
    WindowStyle="ToolWindow"
    ResizeMode="NoResize">
    <StackPanel Background="White" Margin="0,0,0,0" VerticalAlignment="Top">
        <TextBox Name="txtQuestion" Margin="5" Height="80"
                   Foreground="Black"
                 IsReadOnly="True"
                FontFamily="Consolas"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                ScrollViewer.CanContentScroll="True"
                TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal" Margin="0,5,5,5" HorizontalAlignment="Right" Width="49">
            <Button Content="_OK" IsDefault="True" Margin="5" Name="btnOk" 
                    Click="btnOk_Click" FontSize="15" Width="40" 
                    BorderBrush="Transparent" Background="#16379B" Foreground="White" HorizontalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</Window>